 <% provide(:title, "Log in") %>
    <h1>班车管理员登录</h1>
    <div class="row">
      <div class="col-md-6 col-md-offset-3">
<%= form_for(:bus_session, url: bus_login_path) do |f| %> 
 <%= f.label :name %>
          <%= f.text_field :name %>
          <%= f.label :password %>
          <%= f.password_field :password %>
          <%= f.submit "提交", class: "btn btn-primary" %>
<% end %>
      </div>
</div>

