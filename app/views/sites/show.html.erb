<% provide(:title, @site.position) %>
<div class="row">
<aside class="col-md-4">
<section class="user_info">
<h1>
<%= @site.position %>
</h1>
</section>
<section>
  <div id="baidu"></div>
  </section>
</aside>

<div class="col-md-8">
<section>
<%= render 'takes'    %>
</section>
<div id="device-middle"></div>
<section>
<%= render 'reservations'    %>
</section>
</div>
</div>
<script>
$(document).ready(function(){
  var map = new BMap.Map("baidu");
  var point = new BMap.Point(<%= @site.longitude %>, <%= @site.latitude %>);
  map.centerAndZoom(point, 15);
var marker = new BMap.Marker(point);
map.addOverlay(marker); 
  })
</script>
