<% if @bus_driver.errors.any? %>
 <div id="error_explanation">
        <div class="alert alert-danger">
          The form contains <%= pluralize(@bus_driver.errors.count, "error") %>.
</div>
<ul>
<% @bus_driver.errors.full_messages.each do |msg| %>
<li><%= msg %></li> 
<% end %>
</ul>
</div>
<% end %>
