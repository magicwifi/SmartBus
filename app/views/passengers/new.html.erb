<% provide(:title, '注册') %>
<h1>增加乘客</h1>

<div class="row">
<div class="col-md-6 col-md-offset-3">
<%= form_for(@passenger) do |f| %> 
<%= render 'error_messages' %>
<%= f.label :name,'姓名' %>
<%= f.text_field :name, class: 'form-control'  %>
<%= f.label :password,'密码' %>
<%= f.password_field :password, class: 'form-control'  %>
<%= f.submit "增加完成", class: "btn btn-primary" %>
<% end %>
</div>
</div>
